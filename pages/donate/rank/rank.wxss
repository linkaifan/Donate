/* pages/donate/rank/rank.wxss */
#rank{
    height: 100vh;
    background-color: #ebebeb;
    text-align: center; 
}
.wrap{
    background-color: #fff;
}
image{
    display: block;
}
.head,.head image{
    height: 45rpx;  
    width: 100%; 
}
.content-head,rankBox{
    position: relative;
}
.content-head{
    display: flex;
    align-items: center;
    justify-content: center;
    /* height: 140rpx;   */
    height: 12vh;
}
.logo{
    width: 80rpx;
    height: 80rpx;
}
.title{
    margin-left: 45rpx;
    color: #0d548c;
    font-size: 20px;
    font-weight: 700;
}
.rankBox{
    display: flex;
    justify-content: space-around;
    align-items: center;
    position: relative;
    /* height: 165rpx; */
    height: 14vh;
    border-top: 2px solid #ebebeb;
    font-family: "PingFang";
    color: rgb(85, 85, 85);
}
.avator{
    width: 65rpx;
    height: 65rpx;
    border-radius: 50%;
}
/* .icon1{
    display: inline-block;
    width: 16rpx;
    height: 16rpx;
} */
.rank-n{
    position: absolute;
    right: 85rpx;
    top: -21rpx;
}
.sm-icon{
    width: 50rpx;
    height: 42rpx;  
}
.rank-t{
    width: 50rpx;
    height: 42rpx; 
    text-align: center;
    line-height: 42rpx;
    position: absolute;
    top: 0;left: 0; 
    color: #fff;
    font-size: 13px;
}
.rank-name{
    width: 120rpx;
}

.nav-box{
    width: 100%;
    position: fixed;
    bottom: 0;left: 0;
}
.nav{
    font-size: 14px;
    width: 100%;
    display: flex;
    align-items: center;
    border-top: 2px solid #ebebeb;
    background-color: #fff;
}
.to{
    display: flex;
    align-items: center;
    /* height: 180rpx; */
    height: 14vh;
    width: 50%;
}
.text{
    width: 100%;
    font-family: "PingFang";
    color: rgb(85, 85, 85);  
}
.publish-icon{
    width: 30rpx;height: 40rpx;
    margin: 5rpx auto;
}
.publish-icon2{
    width: 40rpx;height: 40rpx;
    margin: 5rpx auto;    
}
.line{
    background-color: #ebebeb;
    width: 5rpx;
    /* height: 180rpx;  */
    height: 14vh;
}

  