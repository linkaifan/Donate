.nav{
    width: 100%;
    position: fixed;
    bottom: 0;
    display: flex;
    align-items: center;
    border-top: 2px solid #ebebeb;
    background-color: #fff;
}
.toShow,.toSupp{
    display: flex;
    align-items: center;
    height: 318rpx;
    width: 50%;
}
.text{
    width: 100%;
    color: #866c6b;   
}
.second{
    margin:35rpx 0;
}
.line{
    background-color: #ebebeb;
    width: 5rpx;
    height: 259rpx; 
}
  