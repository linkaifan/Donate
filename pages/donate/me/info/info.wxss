/* pages/donate/me/info/info.wxss */
.img,.ib{
    display: inline-block;
}
.db{
    display: block;
}
.nav{
    display: flex;
    font-size: 14px;
    height: 65rpx;
    line-height: 65rpx;
}
.nav>view{
    width: 33%;
    text-align: center;
}
.active{
    border-bottom: 2px solid #866c6b;
}
/* 已发布 */
.show-publish{
    background-color: #ebebeb;
    padding-top: 20rpx;
}
.publish-box{
    margin-bottom: 20rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    height: 245rpx;
    background: #fff;
}
.publish-index{
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    line-height: 90rpx;
    text-align: center;
    color: #866c6b;
}
.odd{
    border: 3px solid #866c6b;
}
.even{
    background-color: #866c6b;
    color: white;
}
.publish-info{
    width: 415rpx;
    overflow: hidden;
}
.publish-p{
    font-size: 14px;
    color: #866c6b;
    margin-bottom: 15rpx;
}
.publish-right{
    width: 19rpx;
    height: 30rpx;
}
/* 遮罩层 */
.wrap{
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(223, 223, 223, 0.4);
    top: 0;left: 0;
    z-index: 1000;

}
.des-info{
    position: relative;
    width: 560rpx;
    height: 1000rpx;
    box-sizing: border-box;
    margin: 40rpx auto 0 auto;
    background-color: #fff;
    text-align: left;
    color:rgb(134, 108, 107);
    font-size: 14px;
    padding: 0 75rpx;
}
/* 设置模糊 */
.blur{
    filter: blur(3px);
}
.des-iconBox{
    text-align: center;
    height: 130rpx;
    line-height: 130rpx;
    padding-top: 45rpx;
}
.info-icon{
    width: 54rpx;
    height: 47rpx;
}
.weight{
    font-weight: 600;
}
.des-t{
    margin-bottom: 20rpx;
}
.des-btn{
    text-align: center;
    border-radius: 6px;
    background-color: rgb(134, 108, 107);
    box-shadow: 0px 1px 1.9px 0.1px rgba(0, 0, 0, 0.2),inset 0px 1px 0.99px 0.01px rgba(0, 0, 0, 0.23);
    font-size: 16px;
    color: rgb(255, 255, 255);  
    position: absolute;
    width: 245rpx;
    height: 85rpx; 
    line-height: 85rpx;
    bottom: 75rpx;
    left: 50%;
    transform: translate(-50%,0); 
}

/* 正在进行中 */
.show-doing{
    padding-top: 50rpx;
    background-color: #ebebeb;
}
.doing-box{
    background-color: #ebebeb;
}
.enterprise-box,
.group-box{
    position: relative;
    display: flex;
    align-self: center;
    padding: 50rpx 35rpx;
    background-color: #fff;
    margin-bottom: 50rpx;
}
.big-icon{
    width: 64rpx;
    height: 64rpx;
    position: absolute;
    top: -32rpx;
    left: 50%;
    transform: translate(-50%,0);
}
.doing-left{
    width: 220rpx;
}
.sm-icon{
    width: 20rpx;
    height: 20rpx;
    margin-right: 5rpx;
}
.avator{
    width: 145rpx;
    height: 145rpx;
    margin: 0 0 30rpx 35rpx;
}
.doing-t{
    color: #866c6b;
    font-size: 11px;
}
.content-t{
    color: #866c6b;
    font-size: 12px;
}
.doing-cotent{
    font-size: 12px;
    color: #866c6b;
}
.doing-right{
    margin-left: 30rpx;
}
/* 已完成 */
.show-complete{
    padding-top: 30rpx;
    background-color: #ebebeb;
}
.com-group,.com-enterprise{
    height: 160rpx;
    margin-bottom: 10rpx;
    background-color: #fff;
    display: flex;
    padding: 35rpx;
    box-sizing: border-box;
}
.com-avator{
    width: 86rpx;
    height: 86rpx;
}
.com-icon{
    margin-left: 50rpx;
}
.comicon-first{
    margin: 15rpx 0;
}
.comicon-first,.comicon-second{
    width: 500rpx;
    font-size: 12px;
    color: #866c6b;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.com-content{
    margin-top: 30rpx;
    padding: 30rpx 35rpx;
    background-color: #fff;
    font-size: 14px;
}
.com-h{
    text-align: center;
    width: 180rpx;
    height: 50rpx;
    line-height: 50rpx;
    margin: 0 auto;
    color: #fff;
    background-color: #866c6b;
    border-radius: 8px;
}
.com-t{
    color: #866c6b;
    margin-top: 20rpx;
}