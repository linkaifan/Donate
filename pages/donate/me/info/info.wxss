/* pages/donate/me/info/info.wxss */
#info{
    background-color: #ebebeb;
    font-family: "PingFang";
}
.img,.ib{
    display: inline-block;
}
.db{
    display: block;
}
/* head */
.head{
    display: flex;
    background-color: #0d548c;
    align-items: center;
    height: 20.2vh;
}
.head-avator{
    border-radius: 50%;
    width: 145rpx;
    height: 145rpx;
    margin: 0 66rpx;
}
.T-name{
    color: #fff;
    font-size: 16px;
}
.head-text{
    font-family: "PingFang";
    color: rgba(255, 255, 255, 0.58);
    font-size: 12px;
}
/* nav  */
.nav{
    background-color: #fff;
    display: flex;
    font-size: 14px;
    height: 65rpx;
    line-height: 65rpx;
}
.nav>view{
    width: 25%;
    text-align: center;
}
.active{
    border-bottom: 2px solid #0d548c;
}
/* 已发布 */
.show-publish{
    color: rgb(88, 88, 88);
    background-color: #ebebeb;
    padding-top: 15rpx;
}
.publish-box{
    margin-bottom: 15rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    height: 14.2vh;
    background: #fff;
}
.publish-index{
    width: 75rpx;
    height: 75rpx;
    border-radius: 50%;
    line-height: 75rpx;
    text-align: center;
}
.odd{
    border: 3px solid #0d548c;
}
.even{
    background-color: #0d548c;
    color: white;
}
.publish-info{
    width: 415rpx;
    overflow: hidden;
}
.publish-p{
    font-size: 14px;
    margin-bottom: 5rpx;
}
.publish-right{
    width: 19rpx;
    height: 30rpx;
}
/* 遮罩层 */
.wrap{
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(223, 223, 223, 0.4);
    top: 0;left: 0;
    z-index: 1000;
}
.des-info{
    color: rgb(88, 88, 88);
    position: relative;
    width: 560rpx;
    min-height: 85vh;
    box-sizing: border-box;
    /* margin: 40rpx auto 0 auto; */
    background-color: #fff;
    text-align: left;
    font-size: 13px;
    padding: 50rpx 75rpx;
}
/* 设置模糊 */
.blur{
    filter: blur(3px);
}
.des-iconBox{
    text-align: center;
    margin-bottom: 30rpx;
}
.info-icon{
    width: 54rpx;
    height: 47rpx;
}
.weight{
    font-weight: 600;
}
.des-t{
    margin-bottom: 8rpx;
}
.des-btn{
    text-align: center;
    border-radius: 6px;
    background-color: #0d548c;
    box-shadow: 0px 1px 1.9px 0.1px rgba(0, 0, 0, 0.2),
    inset 0px 1px 0.99px 0.01px rgba(0, 0, 0, 0.23);
    font-size: 16px;
    color: rgb(255, 255, 255);  
    width: 245rpx;
    height: 85rpx; 
    line-height: 85rpx;
    margin: 30rpx auto;
} 
.des-content{
    min-height: 350rpx;
}
/* 正在进行中 */
.show-doing{
    padding-top: 15rpx;
    background-color: #ebebeb;
    color: rgb(88, 88, 88); 
}
.doing-box{
    background-color: #ebebeb;
}
.enterprise-box,
.group-box{
    position: relative;
    display: flex;
    align-self: center;
    padding: 50rpx 45rpx;
    background-color: #fff;
    margin-bottom: 15rpx;
}
.big-icon{
    width: 64rpx;
    height: 64rpx;
    position: absolute;
    top: -32rpx;
    left: 50%;
    transform: translate(-50%,0);
}
.doing-left{
    width: 220rpx;    
}
.sm-icon{
    width: 20rpx;
    height: 20rpx;
    margin-right: 5rpx;
}
.avator{
    width: 145rpx;
    height: 145rpx;
    margin: 0 0 30rpx 35rpx;
}
.doing-t{
    font-size: 11px;
}
.content-t{
    font-size: 12px;
}
.ellipsis-6{
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 6;
    -webkit-box-orient: vertical;
}
.ellipsis-2{
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.more-box{
    text-align: right;
    padding-right: 25rpx;
}
.more-btn{
    width: 30rpx;
    height: 25rpx;
}
.doing-cotent{
    font-size: 12px;  
    padding-right:20rpx;
    min-height: 200rpx;   
}
.doing-right{
    margin-left: 30rpx;
    min-width: 450rpx;
}
/* 已完成 */
.show-complete{
    color: rgb(88, 88, 88);
    padding-top: 15rpx;
    background-color: #ebebeb;
}
.complete-box{
    margin-bottom: 20rpx;
}
.com-group,.com-enterprise{
    height: 160rpx;
    margin-bottom: 10rpx;
    background-color: #fff;
    display: flex;
    padding: 35rpx;
    box-sizing: border-box;
}
.com-avator{
    width: 86rpx;
    height: 86rpx;
}
.com-icon{
    margin-left: 50rpx;
}
.comicon-first{
    margin: 15rpx 0;
}
.comicon-first,.comicon-second{
    width: 500rpx;
    font-size: 12px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.com-content{
    margin-top: 10rpx;
    padding: 30rpx 35rpx;
    background-color: #fff;
    font-size: 14px;
}
.com-h{
    text-align: center;
    width: 180rpx;
    height: 50rpx;
    line-height: 50rpx;
    margin: 0 auto;
    color: #fff;
    background-color: #0d548c;
    border-radius: 8px;
}
.com-t{
    margin-top: 20rpx;
}
/* 邀请列 */
.invite-box{
    box-sizing: border-box;
    height: 17.3vh;
    display: flex;
    align-items: center;
    margin: 15rpx 0;
    background-color: #fff;
    font-size: 13px; 
}
.invite-img{
    width: 84rpx;
    height: 84rpx;
    margin: 0 40rpx;
}
.invite-right{
    width: 468rpx;
    margin-right: 40rpx;
    color: rgb(88, 88, 88);
}
.invite-btn{
    margin: 30rpx auto;
    width: 360rpx;
    display: flex;
    justify-content: space-between;
}
.des-btn2{
    text-align: center;
    border-radius: 6px;
    background-color: #0d548c;
    box-shadow: 0px 1px 1.9px 0.1px rgba(0, 0, 0, 0.2),
    inset 0px 1px 0.99px 0.01px rgba(0, 0, 0, 0.23);
    font-size: 16px;
    color: rgb(255, 255, 255);  
    width: 150rpx;
    height: 85rpx; 
    line-height: 85rpx;  
}