/* pages/donate/me/info/info.wxss */
.img,.ib{
    display: inline-block;
}
.nav{
    display: flex;
    font-size: 14px;
    height: 65rpx;
    line-height: 65rpx;
}
.nav>view{
    width: 33%;
    text-align: center;
}
.active{
    border-bottom: 2px solid #866c6b;
}
/* 已发布 */
.show-publish{
    background-color: #ebebeb;
    padding-top: 20rpx;
}
.publish-box{
    margin-bottom: 20rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    height: 245rpx;
    background: #fff;
}
.publish-index{
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    line-height: 90rpx;
    text-align: center;
    color: #866c6b;
}
.odd{
    border: 3px solid #866c6b;
}
.even{
    background-color: #866c6b;
    color: white;
}
.publish-info{
    width: 415rpx;
    overflow: hidden;
}
.publish-right{
    width: 19rpx;
    height: 30rpx;
}
/* 遮罩层 */
.wrap{
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(223, 223, 223, 0.4);
    top: 0;left: 0;
    z-index: 1000;

}
.des-info{
    position: relative;
    width: 560rpx;
    height: 1000rpx;
    box-sizing: border-box;
    margin: 40rpx auto 0 auto;
    background-color: #fff;
    text-align: left;
    color:rgb(134, 108, 107);
    font-size: 14px;
    padding: 0 75rpx;
}
/* 设置模糊 */
.blur{
    filter: blur(3px);
}
.des-iconBox{
    text-align: center;
    height: 130rpx;
    line-height: 130rpx;
    padding-top: 45rpx;
}
.info-icon{
    width: 54rpx;
    height: 47rpx;
}
.weight{
    font-weight: 600;
}
.des-t{
    margin-bottom: 20rpx;
}
.des-btn{
    text-align: center;
    border-radius: 6px;
    background-color: rgb(134, 108, 107);
    box-shadow: 0px 1px 1.9px 0.1px rgba(0, 0, 0, 0.2),inset 0px 1px 0.99px 0.01px rgba(0, 0, 0, 0.23);
    font-size: 16px;
    color: rgb(255, 255, 255);  
    position: absolute;
    width: 245rpx;
    height: 85rpx; 
    line-height: 85rpx;
    bottom: 75rpx;
    left: 50%;
    transform: translate(-50%,0); 
}

/* 正在进行中 */
.show-doing{
    padding: 50rpx;
    background-color: #ebebeb;
}
.doing-box{
    height: 380rpx;
    background-color: #fff;
    display: flex;
}