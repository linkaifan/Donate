.line{
    width: 730rpx;
    margin: 0 auto;
    background-color: #ebebeb;
    height: 5px;
}
.iconBox{
    display: flex;
    align-items:center;
    justify-content:center;
    border-radius: 50%;
    width: 106rpx;
    height: 106rpx;
}
.iconBox image{
    width: 65rpx;
    height: 60rpx;
}
.first{
    background-color: #866c6b;
}
.second{
    border: 1px solid  #866c6b;
}
.right-iconBox{
    display: flex;
    align-items:center;
    justify-content:center;
}
.right-iconBox,
.right-iconBox image{
    width: 43rpx;
    height: 40rpx;
}