#home{
    position: relative;
}
image{
    display: block;
}
.head{
    height: 200rpx;
}
.intro{
    height: 400rpx;
    margin-bottom: 30rpx;
}
.nav{
    position: fixed;
    bottom: 0;
}
.toSch,.toEnter{
    height: 160rpx;
    line-height: 160px;
    display: flex;
    justify-content: space-around;
    align-items:center;
}
/* .toSch text,.toEnter text{
