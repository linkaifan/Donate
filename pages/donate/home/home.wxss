/* pages/donate/home/home.wxss */
#home{
    position: relative;
    height: 100vh;
    width: 100vw;
    display: flex;
    justify-content: center;
    align-items: center;
    background-image: url('http://images.nancelglap.cn/develop/sponsorBg.png')
}
image{
    display: block;
}
.content{
    box-sizing: border-box;
    width: 85vw;
    height: 90vh;
    background-color: #fff;
    padding: 7vh 0;
}
.intro-text{
    font-family: "PingFang";
    color: rgb(88, 88, 88);
    font-weight: 600;
    text-align: center;
    font-size: 12px;
}
.intro-t{
    margin: 35rpx 0;
}
.vtmer{
    font-size: 10px;
    margin: 35rpx 0;
    font-weight: 500;
}
.logo{
    width: 170rpx;
    margin: 0 auto;
    height: 178rpx;
    box-sizing: border-box;
    margin-bottom: 3.5vh;
}
.nav{
    display: flex;
    color: #0d548c;
    font-size: 12px;
    text-align: center;
    margin-top: 7vh;
    justify-content: space-between;
    padding: 0 75rpx;
}
.toStu,.toEnter{
    width: 220rpx;
    height: 100rpx;
    border-radius: 5px;
    /* box-shadow: 0px 0px 0.9px 0.1px rgba(0, 0, 0, 0.2),
    inset 0px 0px 0.09px 0.01px rgba(0, 0, 0, 0.23); */
    box-shadow: -0.1px 0px 0.5px #ada4ad;
} 
.toRank{
    padding-top: 3rpx;
    box-sizing: border-box;
    width: 490rpx;
    margin: 40rpx auto;
    height: 100rpx;
    border-radius: 5px;
    background-color: #0d548c;
    text-align: center;
    color: #fff;
    font-size: 12px;
}
.icon{
    width: 38rpx;
    height: 33rpx;
    margin: 20rpx auto 5rpx auto;
}

  